generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String  
  email     String   @unique
  phone     String   @unique 
  dob       DateTime? 
  purchases Int?     
  address   Json     @default("{}")  // Default JSONB
  data      Json     @default("{}")  // Default JSONB
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}